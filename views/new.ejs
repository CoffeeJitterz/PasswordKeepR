    <h3>PassWord Generator </h3>
    <table class="table">
    <div class="container">
      <div class="lengthofchar">Password Length:</div>
      <div>
        <select id="pwdlengthchar" onclick="Save(false)">
          <label for="pwdlength">Weak</label>
          <optgroup label="Weak">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
            <option value="6">6</option>
            <option value="7">7</option>
          </optgroup>
          <optgroup label="Strong"></optgroup>
          <option value="8">8</option>
          <option value="9">9</option>
          <option value="10">10</option>
          <option value="11">11</option>
          <option value="12">12</option>
        </select>
      </div>
      <div class="Numberbox">Include Numbers:</div>
      <div class="chkboxnum">
        <label>
          <input type="checkbox" name="Numbers" id="Numbers" onclick="SaveOption(false);">
          (1234...)
        </label>
        <div clas="lcbox">Include Lowercase:</div>
        <div class="chkboxlc">
          <label>
            <input type="checkbox" name="Lowercase" id="Lowercase" onclick="SaveOption(false);">
            (a, b, c, d...)
          </label>
        </div>
        <div class="upbox"> Include Uppercase:</div>
        <div class="chkboxup">
          <label>
            <input type="checkbox" name="Uppercase" id="Uppercase" onclick="SaveOption(false);">
            (A, B, C, D..)
          </label>
        </div>
        <div class="upbox"> Include Symbols:</div>
        <div class="chkboxsym">
          <label>
            <input type="checkbox" name="Symbols" id="Symbols" onclick="SaveOption(false);">
            (! @ # $ % & * %)
          </label>
        </div>
        <button onclick="generatePassword()" class="btn btn-primary">Generate Password</button>
        <!-- <button type="submit" class="btn btn-primary">Save</button> -->
      </div>
      <div class="passwordBox">Your Password:</div>
      <div>

        <textarea name="text" id="pass-text" ></textarea>

        <button id="copy">Copy</button>

      </div>
