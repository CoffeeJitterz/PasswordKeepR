<body>
  <%- include('partials/_header') %>
 <main id="register_main">
   <h1>New In Town?</h1>
   <form method="POST" action="/register" id="register_form">
     <div class="register_field">
       <label for="org">Your organization name</label>
       <input name="organization_name" type="text" class="form-control" id="org_name" placeholder="Enter org name">
     </div>

     <div class="register_field">
       <label for="exampleInputEmail1">Your Email address</label>
       <input name="email" type="email" class="form-control" id="exampleInputEmail1" placeholder="Enter email">
     </div>

     <div class="register_field">
       <label for="exampleInputPassword1">Create a Password</label>
       <input name="password" type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
     </div>

     <!-- <div class="form-check">
